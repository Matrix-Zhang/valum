#!/usr/bin/env python

def configure(cfg):
    cfg.load('glib2')

def build(bld):
    bld.load('glib2')
    bld.program(
        packages     = ['glib-2.0', 'libsoup-2.4', 'gee-0.8', 'ctpl'],
        target       = 'app',
        source       = ['app.vala', 'app.gresource.xml'],
        use          = 'valum',
        install_path = None)
